  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  // prettier settings
  "prettier.configPath": ".prettierrc",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
